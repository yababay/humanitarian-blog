doctype html
html(lang="ru")
    head
        meta(name="description" content=description)
        meta(name="author" content=author)
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width,initial-scale=1')

        if withBootstrap
            link(rel='stylesheet' href='vendors/css/bootstrap.min.css')
            script(defer src='vendors/js/bootstrap.bundle.min.js')

        if withHeaderMainFooter
            link(rel='stylesheet' href='css/header-main-footer.css')

        if withAsideAndArticleMain
            link(rel='stylesheet' href='css/aside-and-article.css')

        if withOffcanvasAndArticleMain
            link(rel='stylesheet' href='css/offcanvas-and-article.css')

        if withSvelte
            link(rel='stylesheet' href='svelte/bundle.css')
            script(defer src='svelte/bundle.js')

        if logoFormat == "svg"
            link(rel='icon' type='image/svg+xml' href='img/index.svg')
        else
            link(rel='icon' type='image/png' href='favicon.png')

        link(rel='stylesheet' href='css/index.css')

        title= title

    body
        header
            if withBrandAndEndIconsHeader
                include headers/brand-and-end-icons
        main
            if withAsideAndArticleMain
                include asides/aside-and-article
            if withOffcanvasAndArticleMain
                include asides/offcanvas-and-article
        footer
            if withSimpleCopyrightFooter
                include footers/simple-copyright

